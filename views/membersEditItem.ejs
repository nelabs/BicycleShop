
<%- include('./partials/header.ejs') %>
<body>
  
  <%- include('./partials/adminnavigation.ejs') %>

  <div class="container mt-1">
    <form action="/members/posts/<%=bicycle.id%>" method="post">
      
      <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="category" value="<%=bicycle.name%>">
      </div>
      <div class="form-group">
        <label>Description</label>
        <textarea name="description" id="" cols="30" rows="5" class="form-control" placeholder="Category description"><%=bicycle.description%></textarea>
      </div>
      <div class="form-group">
        <label>Price</label>
        <input type="text" class="form-control" name="Price" value="<%=bicycle.price%>">
      </div>
      <div class="form-group">
        <label>Discount</label>
        <input type="text" class="form-control" name="Discount" value="<%=bicycle.discount_percentage%>">
      </div>
      <div style="float:left">
      <button style="display: inline" type="submit" class="btn btn-primary">Update item</button>           
   
    </form>
    <form style="display: inline" action="/members/posts/"><button type="submit" class="btn btn-dark">Back</button>
    </form>
    </div>
  </div>

</body>
</html>