
<%- include('./partials/header.ejs') %>
<body>
  
  <%- include('./partials/adminnavigation.ejs') %>
 

<div class="container mt-1">
  <form action="/members/posts/add"><button type="submit" class="btn btn-primary">Add post</button>
  </form>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
        <th scope="col">Price</th>
        <th scope="col">Edit</th>
      </tr>
    </thead>
    <tbody>
      <% var i=1 %>
  <% for (let bicycle of bicycles) { %>
    
    <div class="col-md-4">
         <p></p> 
    </div>
  
        <tr>
          <th scope="row"><%=i%></th>
          <td><a href="/members/posts/<%=bicycle._id%>" class="bicycle-name"><%=bicycle.name%></a></td>
          <% const cat = bicycle.category ?? '' %>
          <td>
            <%=cat.category %>
      
          </td>
          <td><%=bicycle.price%></td>
          <td>
            <div style="float:left">
            <form style="display: inline" action="/members/posts/<%=bicycle._id%>"><button type="submit" class="btn btn-dark btn-sm">Edit</button>
              </form>
              <form style="display: inline" method="post" action="/members/posts/<%=bicycle._id%>?_method=DELETE"><button type="submit" class="btn btn-danger btn-sm">Delete</button></form>
            </div>
          </td>
        </tr>
        <tr>
    <% i++; %>
   
<% } %>
</tbody>
</table>
<% if (message) { %>
  <div class="alert alert-success"><%=message %></div>
<% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
  </html>