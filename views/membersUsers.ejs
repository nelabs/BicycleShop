
<%- include('./partials/header.ejs') %>
<body>
  
  <%- include('./partials/adminnavigation.ejs') %>
 

<div class="container mt-1">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Password</th>
        <th scope="col">Edit</th>
      </tr>
    </thead>
    <tbody>
      <% var i=1 %>
  <% for (let user of users) { %>
    
    <div class="col-md-4">
         <p></p> 
    </div>
  
        <tr>
          <th scope="row"><%=i%></th>
          <td><a href="/members/posts/<%=user._id%>" class="bicycle-name"><%=user.name%></a></td>
         
          <td>
            <%=user.email %>
      
          </td>
          <td><%=user.password%></td>
          <td>
            <div style="float:left">
        
              <form style="display: inline" method="post" action="/members/posts/<%=user._id%>?_method=DELETE"><button type="submit" class="btn btn-danger btn-sm">Delete</button></form>
            </div>
          </td>
        </tr>
        <tr>
    <% i++; %>
   
<% } %>
</tbody>
</table>
<% if (messages.success) { %>
  <div class="alert alert-success" id="alert"><%=messages.success%></div>
  <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
  </html>